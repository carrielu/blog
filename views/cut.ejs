<%- include b_header %>
<h1>头像剪切</h1>
<img src="/avatar/<%=avatar%>" id="target" alt=""/>
<div id="preview-pane">
    <div class="preview-container">
        <img src="/avatar/<%=avatar%>" class="jcrop-preview" alt="Preview"/>
    </div>
</div>

<input type="button" value="剪切" id="avatorCutBtn">

<script src="/js/jquery.min.js"></script>
<script src="/js/jquery.Jcrop.min.js"></script>
<script type="text/javascript" src="/js/cut.js"></script>

<script type="text/javascript">
    $("#avatorCutBtn").click(function () {
        var w = parseInt($(".jcrop-holder>div:first").css("width"));
        var h = parseInt($(".jcrop-holder>div:first").css("height"));
        var x = parseInt($(".jcrop-holder>div:first").css("left"));
        var y = parseInt($(".jcrop-holder>div:first").css("top"));

        $.get("/doCut",{
            "w" : w,
            "h" : h,
            "x" : x,
            "y" : y
        },function(result){
            if(result == "1"){
                alert("更换头像成功！");
                window.location = "/manage";
            }
        });
    });
</script>
<%- include b_footer %>

